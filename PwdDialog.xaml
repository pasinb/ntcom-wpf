<Window x:Class="NTCOM_WPF.PwdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTCOM_WPF"
        mc:Ignorable="d"
        Title="Enter Password" Height="137" Width="283"
        ResizeMode="NoResize"
        >
    <Grid>
        <Button Content="Submit" Name="SubmitButton" Margin="113,71,92,10" VerticalAlignment="Center" Width="70" Height="25" HorizontalAlignment="Center" Click="SubmitButton_Click"/>
        <PasswordBox x:Name="pwdBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="256" Height="30"/>
        <Button Content="Cancel" Margin="195,71,10,10" VerticalAlignment="Center" Width="70" Height="25" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
